+QString WirelessSecurityDbus::hashWpaPsk(const QString & plainText)
+{
+#define WPA_PMK_LEN 32
+    kDebug() << "Hashing PSK. essid:" << m_essid << "psk:" << plainText;
+    QByteArray buffer(WPA_PMK_LEN * 2, 0);
